<!-- 01/03/2011 -->
<!-- Collect metrics for hudson -->

<project name="kcatoes" default="build" basedir=".">

 <property name="rootDirForPhp" value="" />
 <property name="source" value="lib/model" />

 <target name="clean">
  <!-- Clean up -->
  <delete dir="${basedir}/build"/>

  <!-- Create build directories -->
  <mkdir dir="${basedir}/build/api"/>
  <mkdir dir="${basedir}/build/code-browser"/>
  <mkdir dir="${basedir}/build/coverage"/>
  <mkdir dir="${basedir}/build/logs"/>
  <mkdir dir="${basedir}/build/pdepend"/>
 </target>

 <!-- Run unit tests and generate junit.xml and clover.xml -->
 <target name="phpunit">
  <exec executable="phpunit" failonerror="true"/>
 </target>

 <!-- Run the pdepend, phpmd, phpcpd, phpcs, phpdoc and phploc tasks
      in parallel using a maximum of 2 threads. -->
 <target name="parallelTasks">
  <parallel threadCount="2">
   <sequential>
    <antcall target="pdepend"/>
    <antcall target="phpmd"/>
   </sequential>
   <antcall target="phpcpd"/>
   <antcall target="phpcs"/>
   <antcall target="phpdoc"/>
   <antcall target="phploc"/>
  </parallel>
 </target>

 <!-- Generate jdepend.xml and software metrics charts -->
 <target name="pdepend">
  <exec executable="${rootDirForPhp}pdepend">
   <arg line="--jdepend-xml=${basedir}/build/logs/jdepend.xml
              --jdepend-chart=${basedir}/build/pdepend/dependencies.svg
              --overview-pyramid=${basedir}/build/pdepend/overview-pyramid.svg
              ${source}" />
  </exec>
 </target>

 <!-- Generate pmd.xml -->
 <target name="phpmd">
  <exec executable="${rootDirForPhp}phpmd">
   <arg line="${source}
              xml
              codesize,design,naming,unusedcode
              --reportfile ${basedir}/build/logs/pmd.xml" />
  </exec>
 </target>

 <!-- Generate pmd-cpd.xml -->
 <target name="phpcpd">
  <exec executable="${rootDirForPhp}phpcpd">
   <arg line="--log-pmd ${basedir}/build/logs/pmd-cpd.xml
              ${source}" />
  </exec>
 </target>

 <!-- Generate phploc.csv -->
 <target name="phploc">
  <exec executable="${rootDirForPhp}phploc">
   <arg line="--log-csv ${basedir}/build/logs/phploc.csv
              ${source}" />
  </exec>
 </target>

 <!-- Generate checkstyle.xml -->
 <target name="phpcs">
  <exec executable="${rootDirForPhp}phpcs">
   <arg line="--report=checkstyle
              --report-file=${basedir}/build/logs/checkstyle.xml
              --standard=Symfony
              ${source}" />
  </exec>
 </target>

 <!-- Generate API documentation -->
 <target name="phpdoc">
  <exec executable="${rootDirForPhp}phpdoc">
   <arg line="--directory ${source}
                 --target ${basedir}/build/api" />
  </exec>
 </target>

 <target name="phpcb">
  <exec executable="${rootDirForPhp}phpcb">
   <arg line="--log    ${basedir}/build/logs
              --output ${basedir}/build/code-browser" />
  </exec>
 </target>

 <!--<target name="build" depends="clean,parallelTasks,phpunit,phpcb" />-->
 <target name="build" depends="clean,parallelTasks,phpcb">
  <!-- <exec executable="${rootDirForPhp}phing" /> -->
 </target>
</project>